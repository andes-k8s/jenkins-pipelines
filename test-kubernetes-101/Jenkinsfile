pipeline {
  agent {
    kubernetes {
      inheritFrom 'kube-agent'
      yaml '''
      spec:
        containers:
        - name: docker
          image: docker:19.03.1
          volumeMounts:
            - name: dockersock
              mountPath: "/var/run/docker.sock"
        volumes:
        - name: dockersock
          hostPath:
            path: /var/run/docker.sock
'''
    }
  }
  stages {
    stage('Build API') {
      steps {
        script {
          def checkoutResponse = checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/hospitalneuquen/turnero-core.git']]])
          def BRANCH = GIT_BRANCH.replaceAll("origin/", "")
          def HASH = checkoutResponse.GIT_COMMIT
          print "-------------------------------------"
          print HASH
          print "-------------------------------------"
          print "docker build -f api/Dockerfile -t ${API_IMAGE_NAME}:${BRANCH}-${HASH} -t ${API_IMAGE_NAME}:${BRANCH} ./api"
          print "-------------------------------------"
          def apiImage = docker.build("${API_IMAGE_NAME}:${BRANCH}-${HASH}", "./api")
          def apiImage2 = docker.build("${API_IMAGE_NAME}:${BRANCH}", "./api")
          def appImage = docker.build("${APP_IMAGE_NAME}:${BRANCH}-${HASH}", "./app")
          def appImage2 = docker.build("${APP_IMAGE_NAME}:${BRANCH}", "./app")

        }
        script {
          docker.withRegistry('', registryCredential ) {
            dockerAPI = docker.image("${API_IMAGE_NAME}:${GIT_BRANCH}")
            dockerAPI.push()
            dockerAPP = docker.image("${APP_IMAGE_NAME}:${GIT_BRANCH}")
            dockerAPP.push()
          }
        }
      }
    }
  }
}

