@Library('andes-library') _
pipeline {
  agent {
    kubernetes {
      inheritFrom 'kube-agent'
      yamlFile '../agent-kubernetes/dockerPod.yaml'
    }
  }
  stages {
    stage('Run Ansible') {
      steps {
          script {
            node{
              runAnsible{
                playbookFromParams = "PLAYBOOK"
                hostsFromParam = "HOSTS"
                userPublicKeyFromParams = "USER_PUBLIC_KEY"
              }
            }
          }
      }
    }
  }
}
